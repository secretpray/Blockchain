<div class="space-y-8">
  <% if Current.user %>
    <div class="card shadow-lg">
      <div class="card-header border-b border-border">
        <h2 class="text-xl font-semibold tracking-tight">Dashboard</h2>
      </div>
      <div class="card-content space-y-4">
         <div class="grid gap-4 md:grid-cols-2">
            <div class="p-4 rounded-lg bg-muted/50 border border-border">
               <div class="text-sm font-medium text-muted-foreground mb-1">Username</div>
               <div class="font-medium text-lg"><%= Current.user.username %></div>
            </div>
            <div class="p-4 rounded-lg bg-muted/50 border border-border">
               <div class="text-sm font-medium text-muted-foreground mb-1">Ethereum Address</div>
               <div class="font-mono text-sm break-all"><%= Current.user.eth_address %></div>
            </div>
         </div>
      </div>
    </div>
  <% else %>
     <div class="flex flex-col items-center justify-center min-h-[50vh] text-center space-y-6">
        <h1 class="text-4xl font-bold tracking-tighter sm:text-5xl md:text-6xl bg-gradient-to-r from-primary to-purple-400 bg-clip-text text-transparent">
          Blockchain Rails
        </h1>
        <p class="max-w-[600px] text-muted-foreground text-lg sm:text-xl">
           A secure, decentralized authentication system built with Ruby on Rails and Ethereum.
        </p>
        <div class="flex gap-4">
           <%= link_to "Get Started", new_user_path, class: "btn h-11 px-8 text-base" %>
           <%= link_to "Learn More", "#", class: "btn btn-ghost h-11 px-8 text-base" %>
        </div>
     </div>
  <% end %>
</div>