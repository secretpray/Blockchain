<div class="flex min-h-[60vh] items-center justify-center">
  <div class="w-full max-w-md" data-controller="wallet-login">
    <div class="card shadow-lg">
      <div class="card-header">
        <h1 class="text-2xl font-semibold tracking-tight text-center">Welcome back</h1>
        <p class="text-sm text-muted-foreground text-center mt-2">
          Connect your wallet to sign in
        </p>
      </div>
      
      <div class="py-8 flex justify-center items-center">
        <%= form_with url: session_path, method: :post, class: "w-full flex basis-3/4" do %>
          <%= hidden_field_tag :eth_address, nil, data: { "wallet-login-target": "address" } %>
          <%= hidden_field_tag :message, nil, data: { "wallet-login-target": "message" } %>
          <%= hidden_field_tag :signature, nil, data: { "wallet-login-target": "signature" } %>

          <button type="button" class="btn w-full h-11 text-base relative overflow-hidden transition-all hover:ring-2 hover:ring-primary hover:ring-offset-2 hover:ring-offset-background" data-action="wallet-login#connectAndSign">
            <span class="mr-2">âš¡</span> Connect &amp; Sign-in
          </button>
        <% end %>

        <p class="text-sm text-center text-error font-mono break-all min-h-6" data-wallet-login-target="status"></p>
      </div>
      
      <div class="card-footer justify-center">
         <p class="text-sm text-muted-foreground">
           Just connect your wallet to sign in
         </p>
      </div>
    </div>
  </div>
</div>